{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "includeFiles": "{.cache/**,dist/**,config/**,database/**,public/**,package.json,node_modules/**/*.js,node_modules/**/*.json,node_modules/**/*.node}"
    }
  }
}