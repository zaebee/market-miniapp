{
  "kind": "collectionType",
  "collectionName": "agents",
  "info": {
    "singularName": "agent",
    "pluralName": "agents",
    "displayName": "Agent",
    "description": "Real estate agents"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "bio": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "apartments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::apartment.apartment",
      "mappedBy": "agent"
    }
  }
}
